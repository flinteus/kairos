{
  "manifest_version": 2,
  "name": "Kairos - Генератор паролей",
  "version": "1.0.0",
  "description": "Безопасный генератор паролей с оценкой сложности",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "kairos-password-generator@example.com",
      "strict_min_version": "91.0",
      "update_url": "https://yourdomain.com/updates.json"
    }
  },
  
  "browser_action": {
    "default_popup": "HTML.html",
    "default_title": "Kairos - Генератор паролей",
    "default_icon": {
      "16": "icons/Kairosicon16.png",
      "32": "icons/Kairosicon16.png",
      "48": "icons/Kairosicon48.png",
      "64": "icons/Kairosicon48.png",
      "128": "icons/kairos128.jpeg"
    }
  },
  
  "icons": {
    "16": "icons/Kairosicon16.png",
    "32": "icons/Kairosicon16.png",
    "48": "icons/Kairosicon48.png",
    "64": "icons/Kairosicon48.png",
    "96": "icons/kairos128.jpeg",
    "128": "icons/kairos128.jpeg",
    "256": "icons/kairos128.jpeg",
    "512": "icons/kairos128.jpeg"
  },
  
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  
  "content_security_policy": "script-src 'self'; object-src 'self';",
  
  "web_accessible_resources": [
    "icons/*.png",
    "icons/*.jpeg",
    "icons/*.jpg"
  ]
}
